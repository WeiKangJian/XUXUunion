<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.real.Strattips" >

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/imageView1"
	        android:layout_marginTop="48dp"
	        android:text="在下方输入您帖子的内容"
	        android:textSize="25dp"
	        android:gravity="center" />

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/head3" />

	    <EditText
	        android:id="@+id/name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textView1"
	        android:layout_marginTop="90dp"
	        android:layout_toLeftOf="@+id/buttontosend"
	        android:ems="10"
	        android:inputType="textPersonName"
	        android:gravity="center" />

	    <EditText
	        android:id="@+id/mytext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/editText2"
	        android:layout_alignParentBottom="true"
	        android:layout_toLeftOf="@+id/buttontosend"
	        android:ems="10" 
	        android:inputType="textMultiLine">
			
	    </EditText>

	    <Button
	        android:id="@+id/buttontosend"
	        android:layout_width="60dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:text="发帖" />

	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/buttontosend"
	        android:layout_alignBottom="@+id/buttontosend"
	        android:layout_alignParentLeft="true"
	        android:text="内容"
	        android:textSize="20dp" />

	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/maincontent"
	        android:layout_alignBottom="@+id/maincontent"
	        android:layout_alignParentLeft="true"
	        android:text="主题"
	        android:textSize="20dp" />

	    <EditText
	        android:id="@+id/maincontent"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/mytext"
	        android:layout_marginBottom="30dp"
	        android:layout_toLeftOf="@+id/buttontosend"
	        android:gravity="center"
	        android:ems="10" />

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/name"
	        android:layout_alignBottom="@+id/name"
	        android:layout_alignParentLeft="true"
	        android:text="昵称"
	        android:textSize="20dp" />

</RelativeLayout>
